{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties": {
		"info": {
			"type": "object",
			"properties": {
				"version": {
					"type": "integer",
					"$comment": "version of this schema"
				},
				"ideVersion": {
					"type": "string",
					"$comment": "4D Version; ex 1960"
				},
				"ideBuildVersion": {
					"type": "string",
					"$comment": "4D build version"
				},
				"componentBuild": {
					"type": "string"
				},
				"target": {
					"anyOf": [
						{
							"type": "array",
							"items": {
								"type": "string",
								"enum": [
									"iOS",
									"android"
								]
							}
						},
						{
							"type": "string",
							"enum": [
								"iOS",
								"android"
							]
						}
					]
				}
			},
			"$comment": "Mainly info about IDE which produce the file"
		},
		"product": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"version": {
					"type": "string"
				},
				"copyright": {
					"type": "string"
				},
				"bundleIdentifier": {
					"type": "string"
				}
			},
			"$comment": "Info of mobile app"
		},
		"organization": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"teamId": {
					"type": "string"
				},
				"id": {
					"type": "string"
				}
			},
			"$comment": "Info of dev team (useful to sign and to identify app)"
		},
		"developer": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"id": {
					"type": "string"
				}
			},
			"$comment": "Info of dev (useful to sign and put in generated source code)"
		},
		"ui": {
			"type": "object",
			"properties": {
				"dominantColor": {
					"type": "string"
				}
			}
		},
		"dataModel": {
			"type": "object",
			"patternProperties": {
				"[0-9]+": {
					"type": "object",
					"properties": {
						"": {
							"type": "object",
							"properties": {
								"name": {
									"type": "string"
								},
								"label": {
									"type": "string"
								},
								"shortLabel": {
									"type": "string"
								},
								"primaryKey": {
									"type": "string"
								},
								"embedded": {
									"type": "boolean"
								}
							},
							"required": [
								"name"
							]
						}
					},
					"required": [
						""
					],
					"patternProperties": {
						"[0-9]+": {
							"type": "object",
							"properties": {
								"name": {
									"type": "string"
								},
								"fieldNumber": {
									"type": "integer"
								},
								"label": {
									"type": "string"
								},
								"shortLabel": {
									"type": "string"
								},
								"kind": {
									"type": "string",
									"enum": [
										"storage",
										"relatedEntity",
										"relatedEntities",
										"calculated",
										"alias"
									]
								},
								"fieldType": {
									"type": "integer"
								},
								"valueType": {
									"type": "string",
									"enum": [
										"number",
										"string",
										"date",
										"image",
										"object",
										"bool"
									]
								},
								"type": {
									"type": "integer"
								}
							},
							"required": [
								"kind",
								"name"
							]
						},
						"^(?!\\s*$).+": {
							"type": "object",
							"properties": {
								"name": {
									"type": "string"
								},
								"fieldNumber": {
									"type": "integer"
								},
								"label": {
									"type": "string"
								},
								"shortLabel": {
									"type": "string"
								},
								"kind": {
									"type": "string",
									"enum": [
										"storage",
										"relatedEntity",
										"relatedEntities",
										"calculated",
										"alias"
									]
								},
								"fieldType": {
									"type": "integer"
								},
								"valueType": {
									"type": "string",
									"enum": [
										"number",
										"string",
										"date",
										"image",
										"object",
										"bool"
									]
								},
								"type": {
									"type": "integer"
								}
							},
							"required": [
								"kind"
							]
						}
					}
				}
			},
			"$comment": "Describe the entities and their attributed need by the app"
		},
		"dataSource": {
			"type": "object",
			"properties": {
				"source": {
					"type": "string"
				},
				"doNotGenerateDataAtEachBuild": {
					"type": "boolean"
				},
				"doNotExportImages": {
					"type": "boolean"
				}
			}
		},
		"server": {
			"type": "object",
			"properties": {
				"urls": {
					"type": "object",
					"properties": {
						"production": {
							"type": "string"
						}
					}
				}
			}
		},
		"main": {
			"type": "object",
			"properties": {
				"navigationTitle": {
					"type": "string"
				},
				"navigationType": {
					"type": "string"
				},
				"order": {
					"type": "array",
					"items": {
						"anyOf": [
							{
								"type": "string",
								"$comment": "table number"
							},
							{
								"type": "object",
								"properties": {
									"name": {
										"type": "string"
									},
									"label": {
										"type": "string"
									},
									"shortLabel": {
										"type": "string"
									},
									"icon": {
										"type": "string"
									},
									"actions": {
										"type": "array",
										"items": {
											"type": "string",
											"$comment": "action name"
										}
									}
								},
								"required": [
									"name"
								]
							}
						]
					}
				}
			},
			"$comment": "Describe the main menu"
		},
		"list": {
			"type": "object",
			"patternProperties": {
				"[0-9]+": {
					"type": "object",
					"properties": {
						"form": {
							"type": "string"
						},
						"fields": {
							"type": "array",
							"items": {
								"type": "object",
								"properties": {
									"name": {
										"type": "string"
									},
									"kind": {
										"type": "string"
									},
									"fieldType": {
										"type": "integer"
									},
									"fieldNumber": {
										"type": "integer"
									},
									"path": {
										"type": "string"
									}
								},
								"required": [
									"name",
									"kind",
									"fieldType"
								]
							}
						}
					}
				}
			},
			"$comment": "Define fields/attributes affected to list table forms by table"
		},
		"detail": {
			"type": "object",
			"patternProperties": {
				"[0-9]+": {
					"type": "object",
					"properties": {
						"form": {
							"type": "string"
						},
						"fields": {
							"type": "array",
							"items": {
								"type": "object",
								"properties": {
									"name": {
										"type": "string"
									},
									"kind": {
										"type": "string"
									},
									"fieldType": {
										"type": "integer"
									},
									"fieldNumber": {
										"type": "integer"
									},
									"path": {
										"type": "string"
									}
								},
								"required": [
									"name",
									"kind",
									"fieldType"
								]
							}
						}
					}
				}
			},
			"$comment": "Define fields/attributes affected to detail table forms by table"
		},
		"actions": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"scope": {
						"type": "string",
						"enum": [
							"table",
							"currentRecord",
							"global"
						]
					},
					"label": {
						"type": "string"
					},
					"shortLabel": {
						"type": "string"
					},
					"icon": {
						"type": "string"
					},
					"tableNumber": {
						"type": "integer"
					},
					"parameters": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"name": {
									"type": "string"
								},
								"label": {
									"type": "string"
								},
								"shortLabel": {
									"type": "string"
								},
								"type": {
									"type": "string"
								}
							},
							"required": [
								"name",
								"type"
							]
						}
					}
				},
				"required": [
					"name",
					"scope"
				]
			}
		}
	},
	"required": [
		"info",
		"product",
		"organization",
		"developer",
		"ui",
		"dataModel",
		"dataSource",
		"server",
		"main"
	]
}